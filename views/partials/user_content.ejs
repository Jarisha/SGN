<!-- This is the view of another user's profile -->

<div id="profile_col">
  <div id="profile_header">PROFILE</div>
  <div class="left_container">
    <div class="left_padding" style="position:relative">
      <div class="profile_pic" >
        <img src="{{profile.profileImg}}" width="165" height="165"/>
      </div>
      <div class="profile_xp">
        <span class="curr_level">Level {{profile.level || 1}}</span>
        <span class="to_level">{{profile.nextXP || 99}}XP to level</span>
      </div>
      <div class="xp_bar clearfix">
        <span class="xp_gained">
        </span>
        <span class="xp_remaining">
        </span>
      </div>
    </div>
  </div>
  <div class="right_container">
    <div class="right_padding">
      <p class="profile_name">{{profile.name}}</p>
      <p class="bio_text">{{profile.bio}}</p>
      <textarea class="bio_txtarea hidden" rows="4" maxlength="400">Click here to add bio text
      </textarea>
      <div class="bio_opts_container hidden">
        <p class="bio_opts">400 remaining</p>
      </div>
      <div class="social_media">
        <a href="" ng-show="profile.fbConnect">Facebook Page</a>
      </div>
    </div>
  </div>
  <div id="people_container">
    <div id="people_header"> {{dummyFollowers.length}} FOLLOWERS<span class="view_all"><a ng-click="listFollowers()" href="#">View All</a></span></div>
    <div class="bot_container">
      <div class="comrade_tabs">
        <img src="<%= rootPath %>/images/UI/Following1_effects.png" width="40"/>
      </div>
      <a ng-repeat="follower in dummyFollowers" href="/user/{{follower.name}}"><img src="{{follower.img}}"/></a>
    </div>
  </div>
  <div id="footer_container">
    <div id="profile_footer"><div>Groups</div><div>My Posts</div><div>Liked Posts</div><div>Activity</div></div>
  </div>
</div>
<div id="badge_col">
  <div id="badge_header">BADGES<span class="view_all"><a ng-click="listBadges()" href="#">View All</a></span></div>
  <div class="badge_chest">
    <img src="<%= rootPath %>/images/misc_images/badge1.png" width="60"/>
  </div>
</div>
<div id="following_col">
  <div id="following_header">{{dummyFollowing.length}} FOLLOWING<span class="view_all"><a ng-click="listFollowing()" href="#">View All</a></span></div>
  <div class="badge_chest">
    <a ng-repeat="following in dummyFollowing" href="/user/{{following.name}}"><img src="{{following.img}}"/></a>
  </div>
</div>
<div id="profile_data">
  <div id="profile_data_inner" class="clearfix">
    <div ng-repeat="pin in samplePins" class="game_pin" sample-done>
      <div class="game_options hidden">
        <a class="like_btn">Like</a>
        <a class="pin_btn">Repin</a>
        <a class="comment_btn" href="#c1">Comment</a>
      </div>
      <a class="view_trigger" ng-click="viewGamePin()">
        <img class="game_img" src="{{pin.img}}" width="220"/>
      </a>
      <a name="c1"></a>
      <p class="game_description">This is a description</p>
      <p class="game_attributes">
        <span>1 like</span>&nbsp;&nbsp;<span>1 pin</span>&nbsp;&nbsp;<span>0 comments</span>
      </p>
      <div class="posted_by">
        <img src="<%= rootPath %>/images/30x30.gif" class="profile_img" /><p
        class="post_text"><a ng-show="loggedIn" href="/user/user1"><b>Tony</b></a> onto Shooters</p>
      </div>
    </div>
  </div>
</div>

