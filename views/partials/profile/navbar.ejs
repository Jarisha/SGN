<div id="notifications" ng-show="loggedIn && (css=='front' || css=='profile')">
  <ul id="notify_list">
    <li id="followers_tab" ng-show="loggedIn" class="dropdown">
      <a id="follower_toggle" class="dropdown-toggle" data-toggle="dropdown">
        <img class="new_followers" src="<%= rootPath %>/images/UI/Following1_effects.png" width="35" height="35"/>
        <span class="notifications-count-badge">
          {{notificationsDummyData.followersData.length}}
        </span>
      </a>
      <ul id="follower_dropdown" class="dropdown-menu">
        <li ng-repeat="follower_notification in notificationsDummyData.followersData">
          <a tabindex="-1" href="#">
            <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
            <div class="notification-text">
              <span>{{follower_notification.name}}</span>
              <p>is {{follower_notification.action}}</p>
            </div>
            <i ng-show="follower_notification.action != 'friend request'" class="icon-flag"></i>
            <div ng-show="follower_notification.action == 'friend request'" class="friend-request-response-container">
              <button class="btn btn-success accept-friend-button">Accept</button><br>
              <button class="btn btn-danger ignore-friend-button">Ignore</button>
            </div>
          </a>
        </li>
        <div class="view_all_footer">
          <p ng-click="popFollowerNotifications()" href="#">View All</p>
        </div>
      </ul>
    </li>
    <li id="tag_tab" ng-show="loggedIn">
      <a id="tag_toggle" class="dropdown-toggle" data-toggle="dropdown" href="/about">
        <img class="new_tags" src="<%= rootPath %>/images/UI/Tagged1_effects.png" width="35" height="35"/>
        <span class="notifications-count-badge">
          {{notificationsDummyData.tagsData.length}}
        </span>
      </a>
      <ul id="tag_dropdown" class="dropdown-menu">
        <li ng-repeat="tag_notification in notificationsDummyData.tagsData">
          <a tabindex="-1" href="#">
            <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
            <div class="notification-text">
              <span>{{tag_notification.name}}</span>
              <p>tagged you in {{tag_notification.target}}</p>
            </div>
          </a>
        </li>
        <div class="view_all_footer">
          <p ng-click="popGeneric()" href="#">View All</p>
        </div>
      </ul>
    </li>
    <li id="message_tab" ng-show="loggedIn">
      <a id="message_toggle" class="dropdown-toggle" data-toggle="dropdown" href="/about">
        <img class="new_messages" src="<%= rootPath %>/images/UI/Comment1_effects.png" width="35" height="35"/>
        <span class="notifications-count-badge">
          {{notificationsDummyData.messagesData.length}}
        </span>
      </a>
      <ul id="message_dropdown" class="dropdown-menu">
        <li ng-repeat="message_notification in notificationsDummyData.messagesData">
          <a tabindex="-1" href="#">
            <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
            <div class="notification-text">
              <span>{{message_notification.name}}</span>
              <p>messaged you</p>
            </div>
          </a>
        </li>
        <div class="view_all_footer">
          <p ng-click="popGeneric()" href="#">View All</p>
        </div>
      </ul>
    </li>
  </ul>
  <div id="notify_div"></div><img
  id="notify_triangle" src="<%= rootPath %>/images/UI/triangle_green.png" />
</div>
<div id="nav_content" class="navbar-inner">
  <a id="main_logo" href="/" ng-click="getfront()"><img src="<%= rootPath %>/images/UI/QUYAY-LOGO-FINAL.png" /></a>
  <ul id="nav_left" class="nav">
    <li>
      <img class="search_glass" src="<%= rootPath %>/images/UI/search_glass.png" />
      <form id="search_bar" class="navbar-search" ng-submit="textsearch(searchText)">
        <input type="text" ng-model="searchText" class="search-query" placeholder="Search">
      </form>
    </li>
  </ul>
  <ul id="nav_right" class="nav">
    <li ng-show="loggedIn"><a id="post_btn" style="font-size: 25px;" ng-click="postGamePin()" data-toggle="dropdown">
      <img src="<%= rootPath %>/images/UI/post.png" />
    </a></li>
    <li id="about_tab" class="dropdown">
      <a href="/about" id="about_toggle" class="dropdown-toggle" data-toggle="dropdown">
        <img src="<%= rootPath %>/images/UI/about.png" />
      </a>
      <ul class="dropdown-menu active">
        <li><a href="/about/faq">FAQ</a></li>
        <li><a href="/about/tos">Terms of Service</a></li>
        <li><a href="/about/privacy">Privacy Policy</a></li>
        <li><a href="/about/acceptable">Acceptable Use</a></li>
      </ul>
    </li>
    <!--<li ng-show="!loggedIn"><a ng-click="promptLogin(); log('test')">
      <img id="login_btn" src="<%= rootPath %>/images/UI/Login_effects.png" />
    </a></li>-->
    <!--<li ng-show="!loggedIn"><a ng-click="promptRegister()"> Register </a></li>-->
    <li ng-show="loggedIn" id="profile_tab" class="dropdown">
      <a href="#" id="profile_toggle" class="dropdown-toggle" data-toggle="dropdown">
        <img id="profile_small" ng-src="{{userImg}}" height="22" width="22" />{{userName}}<b class="caret"></b>
      </a>
      <ul id="profile_dropdown" class="dropdown-menu active">
        <li><a href="/profile">My Profile</a></li>
        <li><a ng-click="popGeneric()" data-toggle="dropdown" >Find Friends</a></li>
        <li><a ng-click="viewSettings()" data-toggle="dropdown" >Settings</a></li>
        <li><a ng-click="logoutSubmit()" data-toggle="dropdown" >Log Out</a></li>
      </ul>
    </li>
  </ul>
</div>