<div id="profile_col">
  <div class="left_container">
    <div class="left_padding" style="position:relative">
      <div class="profile_pic" >
        <img src="<%= rootPath %>{{profile.profileImg}}" width="165"/>
        <p style="position: absolute; top:90px; font-size: 15px;" >Upload a profile image</p>
      </div>
      <div class="profile_xp">
        <span class="curr_level">Level {{profile.level}}</span>
        <span class="to_level">{{profile.nextXP}}XP to level</span>
      </div>
      <div class="xp_bar clearfix">
        <span class="xp_gained">
          {{profile.currXP}}
        </span>
        <span class="xp_remaining">
          {{profile.nextXP}}
        </span>
      </div>
    </div>
  </div>
  <div class="right_container">
    <div class="right_padding">
      <p class="profile_name">{{profile.name}}</p>
      <p class="bio_text">{{profile.bio}}</p>
      <textarea class="bio_txtarea hidden" rows="4" maxlength="400">Click here to add bio text
      </textarea>
      <div class="bio_opts_container hidden">
        <p class="bio_opts">400 remaining</p>
      </div>
      <div class="social_media">
        <a href="" ng-show="profile.fbConnect">Facebook Page</a>
      </div>
    </div>
  </div>
  <div class="bot_container">
    <div class="comrade_tabs">
        <img src="<%= rootPath %>/images/friend_add.png" width="40"/>
        <p>{{profile.friends.length}} Friends</p>
    </div>
    <a ng-repeat="friend in profile.friends" href="{{friend}}"><img src="<%= rootPath %>/images/60x60.gif"/></a>
  </div>
  <div class="bot_container">
    <div class="comrade_tabs">
        <img src="<%= rootPath %>/images/friend_tag.png" width="40"/>
        <p>{{profile.followers.length}} Followers</p>
    </div>
    <a ng-repeat="follower in profile.followers" href="{{follower}}"><img src="<%= rootPath %>/images/60x60.gif"/></a>
  </div>
</div>
