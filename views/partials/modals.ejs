<!-- Front Pin Enlarged Modal -->
<div class="modal hide" id="gamePinModal">
  <div class="modal-header clearfix">
    <a href="/user/{{bigPin.posterName}}"><img class="profile_img_top" ng-src="{{ bigPin.profileImg }}"/></a>
    <button ng-show="bigPin.followBtn" ng-click="follow(bigPin.posterName)" class="follow"  type="button">Follow</button>
    <p class="poster"><a href="/user/{{bigPin.posterName}}">{{bigPin.posterName}}</a></p>
    <p class="date_posted">Posted {{bigPin.datePosted}} onto {{bigPin.category}}</p>
  </div>
  <hr>
  <div class="modal-body">
    <div class="view_metadata">
      <span class="game_title">{{ bigPin.gameName }}</span>
      <span ng-show="bigPin.publisher" class="game_publisher">by {{bigPin.publisher}}</span>
    </div>
    <div class="view_img_container">
      <a ng-show="(bigPin.imageUrl || bigPin.sourceUrl) && !bigPin.videoEmbed">
        <img class="view_img" ng-src="{{bigPin.imageUrl || bigPin.sourceUrl}}"/>
      </a>
      <div ng-show="bigPin.videoEmbed && bigPin.sourceUrl" class="view_vid">
      </div>
    </div>
    <div class="view_comment_container">
      <div class="pin_description">
        <p> {{bigPin.description}} </p>
      </div>
      <div ng-repeat="cmt in bigPin.comments" class="view_comment">
        <a href="/user/{{cmt.posterName}}">
          <img ng-src="{{cmt.posterImg || '/images/30x30.gif' }}" class="profile_img"/>
        </a>
        <p class="view_post_text">
          <a href="/user/{{cmt.posterName}}">
            <b>{{cmt.posterName}}</b>
          </a>
          <br/>
          {{cmt.content}}
        </p>
      </div>
      <div class="view_respond clearfix">
        <a href="#"><img ng-src="{{userImg}}" class="profile_img"/></a>
        <textarea ng-click="showRespond = true" class="view_respond_txtarea" placeholder="Post comment" tabindex="" ng-model="big_text"></textarea>
        <button ng-show="showRespond" ng-click="addBigComment(big_text, bigPin.index); showRespond = false;" class="view_respond_btn" type="button">Comment</button>
      </div>
    </div>
    <hr>
  </div>
</div>

