<!-- This is the view of another user's profile -->
<div id="profile_col">
  <div id="profile_header">PROFILE</div>
  <div class="left_container">
    <div class="left_padding" style="position:relative">
      <div class="profile_pic">
        <img ng-src="{{user.profileImg || '<%= rootPath %>/images/160x160.gif'}}" width="165" height="165"/>
      </div>
      <div class="profile_xp">
        <span class="curr_level">Level {{user.level || 1}}</span>
        <span class="to_level">{{user.nextXP || 99}}XP to level</span>
      </div>
      <div class="xp_bar clearfix">
        <span class="xp_gained">
        </span>
        <span class="xp_remaining">
        </span>
      </div>
    </div>
  </div>
  <div class="right_container">
    <button id="message_user" class="btn" disabled>Send Message</button>
    <div class="right_padding">
      <p class="profile_name">{{user.userName}}</p>
      <p class="bio_text">{{user.bio}}</p>
      <textarea class="bio_txtarea hidden" rows="4" maxlength="400">Click here to add bio text
      </textarea>
      <div class="bio_opts_container hidden">
        <p class="bio_opts">400 remaining</p>
      </div>
      <div class="social_media">
        <a href="" ng-show="user.fbConnect">Facebook Page</a>
      </div>
    </div>
  </div>
  <div id="people_container">
    <div id="people_header">
      <div ng-class="{'active_tab': people_tab==FOLLOW}" ng-click="people_tab=FOLLOW;" >{{user.followers.length}} FOLLOWERS</div><div
      ng-class="{'active_tab': people_tab==FRIEND}" ng-click="people_tab=FRIEND;" >0 FRIENDS</div><div
       class="view_all"><p
      class="view_all" ng-click="popGeneric()" href="#">View All</p></div>
    </div>
    <div class="bot_container">
      <div class="comrade_tabs">
        <button ng-show="!isFollowing" id="follow_user" ng-click="follow(user.userName); log('test');">Follow</button>
        <button id="friend_user" disabled>Friend</button>
        <!--<button ng-show="isFollowing" id="follow_user" ng-click="unfollow(user.username)" >unFollow</button>-->
        <button ng-show="isFollowing" id="follow_user" disabled>Follow</button>
      </div>
      <a ng-repeat="follower in user.followers" href="/user/{{follower.userName}}"><img title="{{follower.userName}}" ng-src="{{follower.profileImg || '<%= rootPath %>/images/30x30.gif'}}" width="40px" height="40px"/></a>
      <!--<a href="/user/test"><img title="test" width="40px" height="40px" src="{{following.image || '<%= rootPath %>/images/30x30.gif'}}"/></a>-->
    </div>
  </div>
  <div id="footer_container">
    <div id="profile_footer">
      <div ng-class="{'active_tab': content_tab==GROUPS}" ng-click="getGroupData(); content_tab=GROUPS;">Groups</div><div
      ng-class="{'active_tab': content_tab==POSTS}" ng-click="content_tab=POSTS;">My Posts</div><div
      ng-class="{'active_tab': content_tab==LIKES}" ng-click="showLikes(); content_tab=LIKES;" >Liked Posts</div>
    </div>
  </div>
</div>
<div id="timeline_col" class="profile-column">
  <div id="timeline_header" class="profile-column-header" ng-click="timelineTabClicked='none'">TIMELINE</div>
  <div ng-switch on="timelineTabClicked" id="timeline_contents_container" class="profile-column-contents-container">
    <ul ng-switch-when="none" id="timeline_events" >
      <li  ng-repeat="event in userEvents.concat(pinEvents) | orderBy:'date':true">
        <a tabindex="-1" href="#">
          <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
          <div class="notification-text">
            <span>{{event.sourceData.userName}}</span>
            <p ng-switch on="event.action">
              <span ng-switch-when="followRecieved">followed {{user.userName}}</span>
              <span ng-switch-when="friendRequest">wants to be your friend</span>
              <span ng-switch-when="commentRecieved">commented on {{user.userName}}'s pin in {{event.target}}</span>
            </p>
          </div>
        </a>
      </li>
    </ul>
    <ul ng-switch-when="followers" id="timeline_events">
      <li ng-repeat="userEvent in userEvents | limitTo:5">
        <a tabindex="-1" href="#">
          <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
          <div class="notification-text">
            <span>{{userEvent.sourceData.userName}}</span>
            <p ng-switch on="userEvent.action">
              <span ng-switch-when="followRecieved">followed {{user.userName}}</span>
              <span ng-switch-when="friendRequest">wants to be your friend</span>
            </p>
          </div>
        </a>
      </li>
    </ul>
    <ul ng-switch-when="tags" id="timeline_events">
      <li ng-repeat="pinEvent in pinEvents">
        <a tabindex="-1" href="#">
          <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
          <div class="notification-text">
            <span>{{pinEvent.sourceData.userName}}</span>
            <p>commented on {{user.userName}}'s pin in {{pinEvent.target}}</p>
        </a>
      </li>
    </ul>
    <ul ng-switch-when="comments" id="timeline_events">
      <li ng-repeat="commentEvent in notificationsDummyData.messagesData">
        <a tabindex="-1" href="#">
          <img class= "notification-profile-image" ng-src="<%= rootPath %>/images/30x30.gif">
          <div class="notification-text">
            <span>{{commentEvent.name}}</span>
            <p>commented</p>
          </div>
        </a>
      </li>
    </ul>
  </div>
  <div id="timeline_footer_container">
    <div id="timeline_footer">
      <div>
        <img ng-click="timelineTabClicked='followers'" class="new_followers" src="<%= rootPath %>/images/UI/Following1_effects.png" width="35" height="35"/>
      </div>
      <div>
        <img ng-click="timelineTabClicked='tags'" class="new_tags" src="<%= rootPath %>/images/UI/Tagged1_effects.png" width="35" height="35"/>
      </div>
      <div>
        <img ng-click="timelineTabClicked='comments'" class="new_messages" src="<%= rootPath %>/images/UI/Comment1_effects.png" width="35" height="35"/>
      </div>
    </div>
  </div>
</div>
<div id="badge_col" class="profile-column">
  <div id="badge_header" class="profile-column-header">BADGES</div>
  <ul class="badge_chest" class="profile-column-contents-container">
    <img src="<%= rootPath %>/images/misc_images/badge1.png" width="60"/>
  </ul>
  <div class="view_all_footer"><p ng-click="popBadgeModal()" href="#">View All</p></div>
</div>
<div id="profile_data">
  <div id="group_bar" class="clearfix" ng-show="displayMode.group">
    <span class="group_slice" ng-repeat="group in groupList" ng-click="showGroup(group)">{{group}}</span>
  </div>
  <div id="profile_data_inner" class="clearfix">
    <div ng-repeat="pin in showPins" class="game_pin" profile-masonry>
      <a class="view_trigger" ng-click="viewBigPin(pin)">
        <img class="game_img" ng-src="{{pin.sourceUrl}}" width="220" height="300"/>
      </a>
      <div class="pin_footer">
        <p class="game_description">{{pin.description}}</p>
        <p class="game_attributes">
          <span>{{pin.likedBy.length}} likes</span>&nbsp;&nbsp;<span>{{pin.comments.length}} comments</span>
        </p>
      </div>
    </div>
  </div>
</div>