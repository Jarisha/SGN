<!-- This is the view of another user's profile -->
<div id="profile_col">
  <div id="profile_header">PROFILE</div>
  <div class="left_container">
    <div class="left_padding" style="position:relative">
      <div class="profile_pic">
        <img ng-src="{{user.profileImg || '<%= rootPath %>/images/160x160.gif'}}" width="165" height="165"/>
      </div>
      <!--<div class="profile_xp">
        <span class="curr_level">Level {{user.level || 1}}</span>
        <span class="to_level">{{user.nextXP || 99}}XP to level</span>
      </div>
      <div class="xp_bar clearfix">
        <span class="xp_gained">
        </span>
        <span class="xp_remaining">
        </span>
      </div>-->
    </div>
  </div>
  <div class="right_container">
    <button ng-show="!isFriend" id="message_user" class="btn" disabled>Send Message</button>
    <button ng-show="isFriend" id="message_user" class="btn test_button" ng-click="popMessage();">Send Message</button>
    <div class="right_padding">
      <p class="profile_name">{{user.userName}}</p>
      <p class="bio_text">{{user.bio}}</p>
      <textarea class="bio_txtarea hidden" rows="4" maxlength="400">Click here to add bio text
      </textarea>
      <div class="bio_opts_container hidden">
        <p class="bio_opts">400 remaining</p>
      </div>
      <div class="social_media">
        <a href="" ng-show="user.fbConnect">Facebook Page</a>
      </div>
    </div>
  </div>
  <div id="people_container">
    <ul id="people_header">
      <li ng-class="{'active_tab': people_tab==FOLLOW}" ng-click="people_tab=FOLLOW;" >
        {{user.followers.length}} FOLLOWER<span ng-show="user.followers.length != 1" >S</span>
      </li>
      <li ng-class="{'active_tab': people_tab==FOLLOWING}" ng-click="people_tab=FOLLOWING;" >
        {{ user.following.length }} FOLLOWING
      </li>
      <li ng-class="{'active_tab': people_tab==FRIEND}" ng-click="people_tab=FRIEND; log(user.friends)" >
        {{user.friends.length}} FRIEND<span ng-show="user.friends.length != 1">S</span>
      </li>
    </ul>
    <ul class="bot_container">
      <li class="comrade_tabs">
        <button ng-show="!isFollowing" id="follow_user" class="btn test_button" ng-click="follow(user.userName); log('test');">Follow</button>
        <button ng-show="isFollowing" id="follow_user" class="btn test_button" disabled>Follow</button>
        <button ng-show="!isFriend && !pendingFriend" class="btn test_button" id="friend_user" ng-click="friend(user.email)">Friend</button>
        <button ng-show="isFriend || pendingFriend" class="btn test_button" id="friend_user" disabled>Friend</button>
      </li>
      <li ng-show="people_tab==FOLLOW" ng-repeat="follower in user.followers">
        <a href="/user/{{follower.userName}}">
          <img title="{{follower.userName}}" ng-src="{{follower.profileImg || '/images/30x30.gif'}}" width="40px" height="40px"/>
        </a>
      </li>
      <li ng-show="people_tab==FOLLOWING" ng-repeat="following in user.following">
        <a href="/user/{{following.userName}}">
          <img title="{{following.userName}}" width="40px" height="40px" ng-src="{{following.profileImg || '/images/30x30.gif'}}"/>
        </a>
      </li>
      <li ng-show="people_tab==FRIEND" ng-repeat="friend in user.friends">
        <a href="/user/{{friend.userName}}">
          <img title="{{friend.userName}}" width="40px" height="40px" ng-src="{{friend.profileImg || '/images/30x30.gif'}}"/>
        </a>
      </li>
      <!--<a href="/user/test"><img title="test" width="40px" height="40px" src="{{following.image || '<%= rootPath %>/images/30x30.gif'}}"/></a>-->
    </ul>
  </div>
  <div id="footer_container" ng-include="'partials/profile_footer'"></div>
</div>
<!-- Timeline column and badge column -->
<div id="timeline-badges-columns" ng-include="'partials/profile-user-columns'"></div>
<!-- PROFILE DATA (GROUPS AND LIKED POSTS) -->
<div id="profile_data" ng-include="'partials/profile_data'"></div>
